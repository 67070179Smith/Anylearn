<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anylearn Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    <header class="top">
        <div class="brand">Anylearn</div>
        <div class="top-right">
            <% if(role === "guest") { %>
                <span>
                    <form action="/" method="get">
                        <button type="submit" class="top-btn">Login</button>
                    </form>
                </span>
                <span>
                    <form action="/register" method="get">
                        <button type="submit" class="top-btn">Signup</button>
                    </form>
                </span>
            <% } %>
            <span class="pill"><%= role %></span>
            <% if(role === "student") { %>
                <div class="dropdown">
                    <a class="btn btn-primary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <%= username %>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/profile">ข้อมูลส่วนตัว</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form action="/logout" method="POST" class="m-0">
                                <button type="submit" class="dropdown-item">ออกจากระบบ</button>
                            </form>
                        </li>
                    </ul>
                </div>
            <% } %>
        </div>
    </header>
    <div class="layout">
        <aside class="sidebar">
            <button class="nav-btn active">HM</button>
            <button class="nav-btn">CR</button>
            <button class="nav-btn">CL</button>
            <button class="nav-btn">PR</button>
            <button class="nav-btn">ST</button>
        </aside>
        <section class="content">
            <div class="panel summary">
                <h2>Welcome, <%= username %></h2>
                <span class="chip">Role: <%= role %></span>
                <span class="chip">Courses: <%= courses.length %></span>
                <div class="clock">
                    <div>Server: <strong id="serverTime">--:--:--</strong></div>
                    <div>Local: <strong id="localTime">--:--:--</strong></div>
                </div>
            </div>
            <div class="panel toolbar">
                <label class="search">
                    <input type="text" placeholder="Search (UI only)">
                </label>
                <button class="small-btn" type="button">Sort: Latest</button>
            </div>
            <div class="panel courses">
                <% if (!courses || courses.length === 0) { %>
                    <div class="empty">
                        <% if (role === "teacher") { %>
                            You have no courses yet.
                        <% } else if (role === "student") { %>
                            You are not enrolled in any course yet.
                        <% } else { %>
                            Guest mode has no course data.
                        <% } %>
                    </div>
                <% } %>
                <% if (courses && courses.length > 0) { %>
                    <% courses.forEach((course) => { %>
                        <article class="card">
                            <h3 class="title"><%= course.title %></h3>
                            <p class="desc"><%= course.description || "No description" %></p>
                            <div class="meta-row">
                                <span>ID: <%= course.course_id %></span>
                                <% if (role === "student") { %>
                                    <span>Teacher: <%= course.teacher_name || "-" %></span>
                                <% } %>
                                <% if (role === "teacher") { %>
                                    <span>Students: <%= course.student_count || 0 %></span>
                                    <span>Topics: <%= course.topic_count || 0 %></span>
                                <% } %>
                            </div>
                            <span class="tag"><%= role %></span>
                        </article>
                    <% }) %>
                <% } %>
            </div>
        </section>
    </div>

    <script>
        function updateClock() {
            const now = new Date();
            const timeText = now.toLocaleTimeString("en-GB");
            document.getElementById("serverTime").textContent = timeText;
            document.getElementById("localTime").textContent = timeText;
        }
        updateClock();
        setInterval(updateClock, 1000);
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>